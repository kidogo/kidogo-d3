<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>		
		<table>
			<tr>
				<th>Title</th>
				<td><g:TextBox ui:field="title" /></td>
			</tr>
			<tr>
				<th>Description</th>
				<td><g:TextArea ui:field="description" /></td>
			</tr>
		</table>
		<g:Button styleName="{style.important}" ui:field="save" text="Save" />
		<g:Button styleName="{style.important}" ui:field="cancel" text="Cancel" />
	</g:HTMLPanel>
</ui:UiBinder> 