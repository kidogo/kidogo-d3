<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<h1>Hello <span ui:field="userName"></span>, </h1>
		<g:Button styleName="{style.important}" ui:field="button" text="Sign Out" /><br />
		<g:Button styleName="{style.important}" ui:field="postItemButton" text="Post Item" /><br />
		<g:CheckBox ui:field="showMyItems" /> Only show my items
	</g:HTMLPanel>
</ui:UiBinder> 