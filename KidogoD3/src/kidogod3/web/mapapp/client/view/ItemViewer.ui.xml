<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
	<ui:style>
		.item{
			padding: 8px;
		}
		.title {
			font-weight: bold;
		}
		.description {
			border: 1px solid #AAA;
			border-radius: 8px;
			padding: 8px;
		}
	</ui:style>
	<div class="{style.item} item-view">
		<h1>
			<span class="{style.title} item-view-title" ui:field="title" />
		</h1>
		<div class="{style.description} item-view-description" ui:field="description">
		</div>
	</div>
</ui:UiBinder>